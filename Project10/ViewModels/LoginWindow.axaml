<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="500"
        x:Class="Project10.LoginWindow"
        Title="Login"
        Width="400"
        Height="500"
        CanResize="False"
        WindowStartupLocation="CenterScreen">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Label Name="WelcomeLabel" Content="Welcome"  VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Times New Roman"/>
            <TextBox Name="LoginTextBox" Width="150" Watermark="Login" HorizontalContentAlignment="Center" FontFamily="Times New Roman"/>
            <TextBox Name="PasswordTextBox" Width="150" Watermark="Password" HorizontalContentAlignment="Center" Margin="0 10 0 0" FontFamily="Times New Roman"/>
            <Button Name="LoginButton" Width="150" Content="Login" Background="Gray" HorizontalContentAlignment="Center" Margin="0 10 0 0" FontFamily="Times New Roman" />
            <Label Name="RegisterLabel" Content="Register"  VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Times New Roman" Tapped="RegisterLabel_OnTapped"/>
        </StackPanel>
</Window>
